<table>
	<thead>
		<tr>
			<th>N.</th>
			<th>Title</th>
			<th>Description</th>
			<th>Operations</th>
		</tr>
	</thead>

	<tbody>
		{{#each tasks}}
			<tr>
				<td>{{@index}}</td>
				<td>{{title}}</td>
				<td>{{description}}</td>
				<td>
					{{#if done}}
						<a href='/tasks/toggleDone/{{_id}}'>Undone</a>
					{{else}}
						<a href='/tasks/toggleDone/{{_id}}'>Done</a>
					{{/if}}

					<a href='/tasks/edit/{{_id}}'>Update</a>
					<a href='/tasks/delete/{{_id}}'>Delete</a>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>